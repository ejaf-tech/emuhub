# lxpanel <profile> config file. Manually editing is not recommended.
# Use preference dialog in lxpanel to adjust config when you can.

Global {
  edge=bottom
  align=left
  margin=0
  widthtype=percent
  width=100
  height=26
  transparent=1
  tintcolor=#ffffff
  alpha=0
  setdocktype=1
  setpartialstrut=1
  autohide=0
  heightwhenhidden=0
  usefontcolor=1
  fontcolor=#ffffff
  background=0
  backgroundfile=/usr/share/lxpanel/images/background.png
  usefontsize=1
  fontsize=12
}
Plugin {
  type=taskbar
  expand=1
  Config {
    tooltips=-1
    IconsOnly=0
    AcceptSkipPager=1
    ShowIconified=1
    ShowMapped=1
    ShowAllDesks=0
    UseMouseWheel=1
    UseUrgencyHint=1
    FlatButton=-1
    MaxTaskWidth=150
    spacing=1
    SameMonitorOnly=0
    GroupedTasks=0
    DisableUpscale=0
    UseSmallerIcons=-1
  }
}
Plugin {
  type=monitors
  Config {
    DisplayCPU=1
    DisplayRAM=1
    CPUColor=#0000FF
    RAMColor=#FF0000
  }
}
Plugin {
  type=dclock
  Config {
    ClockFmt=%R
    TooltipFmt=%A %x
    BoldFont=0
    IconOnly=0
    CenterText=0
  }
}
